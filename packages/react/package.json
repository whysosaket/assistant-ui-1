  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./edge": {
      "types": "./dist/edge.d.ts",
      "default": "./dist/edge.js"
    },
    "./smooth": {
      "types": "./dist/smooth.d.ts",
      "default": "./dist/smooth.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    }
  },
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "generated",
    "src",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsx scripts/build.mts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:mutation": "stryker run"
